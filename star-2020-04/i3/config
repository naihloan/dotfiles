  bindsym $mod+d exec $HOME/.config/dmenu/dmenu-bind.sh
  # bindsym --release Print exec scrot '%Y-%m-%d--%s_$wx$h_scrot.png' -e 'mv $f ~/images/ & mirage ~/images/$f'
